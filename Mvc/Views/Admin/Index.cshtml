@using courseWork.Views.Admin
@model courseWork.Models.ViewModels.AdminIndexViewModel

<a asp-action="Subject" asp-controller="Admin">Add Subject</a>

@using (Html.BeginForm("AddUser", "Admin", FormMethod.Post))
{
    <div class="form-group">
        <h3>Fullname:</h3>
        @Html.TextBoxFor(model => model.UserModel.Fullname, new {@class = "form-control"})
        <h3>Email:</h3>
        @Html.TextBoxFor(model => model.UserModel.Email, new {@class = "form-control"})
        <h3>Password:</h3>
        @Html.TextBoxFor(model => model.UserModel.Password, new {@class = "form-control"})
        <h3>Role:</h3>
        @Html.DropDownListFor(model => model.UserModel.Role, RoleListItems.Items)
        <div class="input-group-append">
            <button type="submit" class="btn btn-success">"Add"</button>
        </div>
    </div>
    @Html.ValidationSummary()
}

<h2> Users </h2>
<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">FullName</th>
        <th scope="col">Email</th>
        <th scope="col">Role</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model?.Users!)
    {
        <tr>
            <th>
                @user.Id
            </th>
            <td>
                @user.Fullname
            </td>
            <td>
                @user.Email
            </td>
            <td>
                @user.Role
            </td>
        </tr>
    }
    </tbody>
</table>

