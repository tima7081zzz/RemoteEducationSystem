@model courseWork.Models.ViewModels.ProfessorActivityViewModel

<h2> Activities to Rate </h2>
<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Type</th>
        <th scope="col">MaxGrade</th>
        <th scope="col">Student Name</th>
        <th scope="col">Subject Name</th>
        <th scope="col">Rate</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var activity in Model?.Activities!)
    {
        <tr>
            <th>
                @activity.Id
            </th>
            <td>
                @activity.Name
            </td>
            <td>
                @activity.Type
            </td>
            <td>
                @activity.MaxGrade
            </td>
            <td>
                @activity.StudentName
            </td>
            <td>
                @activity.SubjectName
            </td>
            <td>
                @using (Html.BeginForm("RateStudentsActivity", "Professor", FormMethod.Post))
                {
                    <div class="input-group">
                        <input type="number" id="typeNumber" class="form-control" asp-for="RateStudentsActivityModel.Grade"/>
                        @Html.Hidden("RateStudentsActivityModel.ActivityId", activity.Id)
                        @Html.Hidden("RateStudentsActivityModel.StudentId", activity.StudentId)
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-success">Add</button>
                        </div>
                    </div>
                    @Html.ValidationSummary()
                }
            </td>
        </tr>
    }
    </tbody>
</table>