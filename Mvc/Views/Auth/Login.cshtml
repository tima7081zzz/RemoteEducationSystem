@model Data.DTO.LoginUserDto

@{
    Layout = Layout;
}

<h2>Login</h2>

<a asp-action="Register" asp-controller="Auth">Register</a>

<form asp-action="Login" asp-controller="Auth">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Enter Email</label>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter password</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn" />
        </div>
    </div>
</form>
